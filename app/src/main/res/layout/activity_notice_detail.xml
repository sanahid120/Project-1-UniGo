<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="3dp"
    android:padding="5dp"
    android:elevation="10dp"
    android:background="@drawable/custom_edittext">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >

        <!-- Back Button inside Toolbar -->
        <ImageButton
            android:id="@+id/back_button_noticedetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:background="@null"
            android:contentDescription="Back"
            android:layout_gravity="start" />

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notice Details"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/date_noticeBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:elevation="4dp"
        android:textColor="#2501C7"
        android:padding="1dp"
        android:textSize="15sp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/tv_NoticeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:elevation="5dp"
        android:textColor="#2501C7"
        android:padding="10dp"
        android:background="@drawable/custom_edittext"
        android:textSize="20dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/tvNoticeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Description"
        android:background="@android:drawable/editbox_background_normal"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:layout_marginHorizontal="5dp"/>

    <ImageView
        android:id="@+id/imageView_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_upload_24"
        android:background="@drawable/custom_button_background"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        />

    

</LinearLayout>